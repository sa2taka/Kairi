  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sa2taka/kairi/issues"
  },
  "homepage": "https://github.com/sa2taka/kairi#readme",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node16 --minify --outfile=bin/index",
