    "@typescript-eslint/parser": "^5.59.5",
    "dotenv": "^16.0.3",
    "esbuild": "0.17.19",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "mock-fs": "^5.2.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "vitest": "^0.31.0"
  }
